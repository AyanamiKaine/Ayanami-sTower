---
import "../styles/tailwind.css";
const { title = "Stella ECS", description = "Stella ECS Inspector" } =
    Astro.props;
---

<html lang="en" class="h-full">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1" />
        <title>{title}</title>
        <meta name="description" content={description} />
        <link rel="icon" href="/favicon.svg" />
    </head>
    <body class="min-h-full bg-zinc-950 text-zinc-100 font-sans antialiased">
        <header
            class="border-b border-zinc-800/80 backdrop-blur bg-zinc-900/70 sticky top-0 z-50"
        >
            <nav class="max-w-7xl mx-auto px-4 py-3 flex items-center gap-6">
                <a href="/" class="text-lg font-semibold tracking-wide"
                    >Stella ECS</a
                >
                <a href="/entities" class="hover:text-emerald-400 transition"
                    >Entities</a
                >
                <a href="/systems" class="hover:text-emerald-400 transition"
                    >Systems</a
                >
                <a href="/components" class="hover:text-emerald-400 transition"
                    >Components</a
                >
                <a href="/services" class="hover:text-emerald-400 transition"
                    >Services</a
                >
                <a href="/plugins" class="hover:text-emerald-400 transition"
                    >Plugins</a
                >
                <span class="ml-auto text-xs text-zinc-400"
                    >API: {import.meta.env.PUBLIC_API_BASE_URL || "/api"}</span
                >
            </nav>
        </header>
        <main class="max-w-7xl mx-auto px-4 py-6">
            <slot />
        </main>
    </body>
</html>
