<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <AnalysisLevel>preview</AnalysisLevel>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <IsAotCompatible>true</IsAotCompatible>

    <PackageId>StellaFuzzyPatternMatcher</PackageId>         
    <Version>1.0.4</Version>                     
    <Authors>Ayanami</Authors>     
    <Title>Stella Fuzzy Pattern Matcher (SFPM)</Title>              
    <Description>A lightweight C# library for rule-based pattern matching with support for fuzzy matching and priority-based rule selection..</Description> 
    <Copyright>Copyright (c) Ayanami</Copyright> 
    <PackageLicenseExpression>MIT</PackageLicenseExpression> 
    <PackageProjectUrl>https://github.com/AyanamiKaine/Ayanami-sTower/tree/main/stella_fuzzy_pattern_matcher</PackageProjectUrl> 
    <RepositoryType>git</RepositoryType>          
    <PackageTags>pattern-matching;rule-engine;fuzzy-matching;priority-rules;dotnet;fluent-api;performance;lightweight</PackageTags>
    <NeutralLanguage>en-US</NeutralLanguage>       
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild> 
    <PackageReadmeFile>README.md</PackageReadmeFile>    
    <IncludeSymbols>true</IncludeSymbols>         
    <DebugType>embedded</DebugType>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>
	<ItemGroup>
          	 <PackageReference Include="NLog"/>

		</ItemGroup>

	<ItemGroup>
        <None Include="README.md" Pack="true" PackagePath="\"/>
    </ItemGroup>
</Project>