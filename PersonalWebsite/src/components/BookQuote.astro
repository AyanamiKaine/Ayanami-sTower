---
// Define the props the component expects.
// This is similar to the arguments in your shortcode function.
const { quote, author, source } = Astro.props;
---
<figure class="book-quote">
  <blockquote>
    <p>{quote}</p>
  </blockquote>
  <figcaption>
    &mdash; {author}, <cite>{source}</cite>
  </figcaption>
</figure>

<style>
/* You can add component-scoped CSS right here! */
.book-quote {
  border-left: 4px solid #6366f1;
  padding-left: 1rem;
  margin: 1.5rem 0;
}
blockquote p {
  font-style: italic;
  font-size: 1.1rem;
}
figcaption {
  text-align: right;
  color: #6b7280;
}
</style>