---
import FullScreenAppLayout from "../../layouts/FullScreenAppLayout.astro";
import EconomicEditor from "../../components/app/econonmyEditor/EconomicEditorWrapper.jsx";

const pageTitle = "Economic Architect";
---

<FullScreenAppLayout title={pageTitle}>
    <div class="w-full h-full bg-slate-900">
        <EconomicEditor client:load />
    </div>
</FullScreenAppLayout>

<style>
    .app-page {
        min-height: 100vh;
    }
    .app-canvas :global(.modal-overlay),
    .app-canvas :global(canvas) {
        width: 100% !important;
        height: 100% !important;
    }
    .app-canvas :global(canvas) {
        min-height: 60vh;
        border-radius: 8px;
    }
</style>
