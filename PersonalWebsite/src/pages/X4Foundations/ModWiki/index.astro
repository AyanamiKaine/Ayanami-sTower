---
import Layout from "../../../layouts/Layout.astro";

const allPostsGlob = import.meta.glob("./*/*.mdx", { eager: true });
const allPosts = Object.values(allPostsGlob);
const now = new Date();
const publishedPosts = allPosts.filter((post) => {
    return (
        post.frontmatter.published && new Date(post.frontmatter.created) <= now
    );
});

const postsByCategory = publishedPosts.reduce((acc, post) => {
    const category = post.frontmatter.category || "uncategorized";
    if (!acc[category]) acc[category] = [];
    acc[category].push(post);
    return acc;
}, {});

for (const category in postsByCategory) {
    postsByCategory[category].sort((a, b) => {
        const orderA = a.frontmatter.order ?? Infinity;
        const orderB = b.frontmatter.order ?? Infinity;
        if (orderA !== orderB) {
            return orderA - orderB;
        }
        return a.frontmatter.title.localeCompare(b.frontmatter.title);
    });
}

const chapterOrder = ["xml-schemas", "md-scripts", "ai-scripts", "game-systems", "apis"];

const chapterDescriptions = {
    "xml-schemas": "XML file format documentation for wares, ships, stations, and other game data",
    "md-scripts": "Mission Director scripting language reference and patterns",
    "ai-scripts": "AI behavior scripting, commander scripts, and NPC logic",
    "game-systems": "Core game mechanics: economy, factions, trade, combat, and more",
    "apis": "Game APIs, Lua interfaces, and extension points",
};

function formatCategoryName(name) {
    const customNames = {
        "xml-schemas": "XML Schemas",
        "md-scripts": "MD Scripts",
        "ai-scripts": "AI Scripts",
        "game-systems": "Game Systems",
        "apis": "APIs",
    };
    return customNames[name] || name
        .split("-")
        .map((word) => word.charAt(0).toUpperCase() + word.slice(1))
        .join(" ");
}
---

<Layout title="X4 Mod Wiki - Technical Reference">
    <div class="max-w-4xl mx-auto px-4">
        <!-- Hero Section -->
        <div class="hero-section text-center py-16">
            <h1
                class="text-6xl font-black mb-6 tracking-tight text-gray-900 dark:text-white"
            >
                Mod Wiki
            </h1>
            <p class="text-2xl text-gray-600 dark:text-gray-400 font-light">
                Technical reference documentation for X4: Foundations modding.
            </p>
            <a
                href="/X4Foundations"
                class="inline-block mt-6 text-sm text-blue-600 dark:text-blue-400 hover:underline"
            >
                &larr; Back to Modding Guide
            </a>
        </div>

        <!-- Content Sections -->
        <div class="grid grid-cols-1 xl:grid-cols-1 gap-x-12 gap-y-16 mb-24">
            {
                chapterOrder.map((category) => (
                    <section id={category} class="scroll-mt-24">
                        <div class="mb-6 border-b border-gray-200 dark:border-gray-800 pb-4">
                            <h3 class="text-2xl font-bold text-gray-900 dark:text-white flex items-center gap-3">
                                {formatCategoryName(category)}
                            </h3>
                            {chapterDescriptions[category] && (
                                <p class="text-gray-500 dark:text-gray-400 text-sm mt-1">
                                    {chapterDescriptions[category]}
                                </p>
                            )}
                        </div>

                        {postsByCategory[category] &&
                        postsByCategory[category].length > 0 ? (
                            <div class="overflow-x-auto">
                                <table class="w-full text-left border-collapse text-sm">
                                    <tbody class="divide-y divide-gray-100 dark:divide-gray-800">
                                        {postsByCategory[category].map(
                                            (post) => (
                                                <tr class="group hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-colors">
                                                    <td class="py-3 pr-4 align-top w-2/5">
                                                        <a
                                                            href={post.url}
                                                            class="ml-4 font-semibold text-gray-900 dark:text-gray-200 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors block leading-tight"
                                                        >
                                                            {post.frontmatter.title}
                                                        </a>
                                                        <span class="ml-4 text-xs font-mono text-gray-400 dark:text-gray-500 mt-1 block">
                                                            {new Date(
                                                                post.frontmatter.created,
                                                            ).toLocaleDateString(
                                                                "en-US",
                                                                {
                                                                    month: "short",
                                                                    day: "numeric",
                                                                    year: "numeric",
                                                                },
                                                            )}
                                                        </span>
                                                    </td>
                                                    <td class="py-3 pl-4 align-top text-gray-600 dark:text-gray-400">
                                                        {post.frontmatter.description ||
                                                            "No description available."}
                                                    </td>
                                                </tr>
                                            ),
                                        )}
                                    </tbody>
                                </table>
                            </div>
                        ) : (
                            <div class="p-6 rounded-lg bg-gray-50 dark:bg-white/5 border border-dashed border-gray-200 dark:border-gray-800 text-center">
                                <p class="text-gray-500 dark:text-gray-500 text-sm italic">
                                    Content coming soon.
                                </p>
                            </div>
                        )}
                    </section>
                ))
            }
        </div>

        <div
            class="border-t border-gray-200 dark:border-gray-800 py-12 text-center"
        >
            <p class="text-gray-500 text-sm">
                Built for the community by <span
                    class="font-semibold text-gray-900 dark:text-white"
                    >Ayanami Kaine</span
                >
            </p>
        </div>
    </div>
</Layout>
