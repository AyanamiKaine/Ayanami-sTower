---
import Layout from "../../layouts/Layout.astro";
const allLiteratureGlob = import.meta.glob("./*.mdx", { eager: true });
const allLiterature = Object.values(allLiteratureGlob);
---

<Layout title="Literature">
    <div class="container mx-auto px-4 py-12">
        <h1 class="text-4xl font-bold mb-8 text-center">Literature</h1>
        <p class="text-center text-gray-400 mb-12 max-w-2xl mx-auto">
            A collection of short novels and poems
        </p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
            {
                allLiterature.map((lit) => (
                    <a
                        href={lit.url}
                        class="block group relative h-80 rounded-lg overflow-hidden shadow-lg"
                    >
                        <div
                            class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-105"
                            style={`background-image: url('${lit.frontmatter.coverImage || "/art/rembrandt.webp"}');`}
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent opacity-90 group-hover:opacity-80 transition-opacity duration-300" />

                        <div class="absolute inset-0 p-8 flex flex-col justify-end">
                            <h2 class="text-3xl font-bold mb-3 text-white group-hover:text-accent transition-colors drop-shadow-lg">
                                {lit.frontmatter.title}
                            </h2>
                            <p class="text-gray-200 mb-4 line-clamp-2 drop-shadow-md">
                                {lit.frontmatter.description}
                            </p>
                            <div class="flex items-center text-sm text-white font-medium">
                                <span>Read Story &rarr;</span>
                            </div>
                        </div>
                    </a>
                ))
            }
        </div>
    </div>
</Layout>
