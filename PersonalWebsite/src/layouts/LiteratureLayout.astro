---
import BaseLayout from "./BaseLayout.astro";
import LiteratureViewer from "../components/LiteratureViewer.svelte";
import LiteratureScrollObserver from "../components/LiteratureScrollObserver.svelte";
import "../styles/global.css";

const { frontmatter } = Astro.props;

// Fetch other literature for the "Read Next" section
const allLiteratureGlob = import.meta.glob("../pages/literature/*.mdx", {
    eager: true,
});
const allLiterature = Object.values(allLiteratureGlob);
const otherLiterature = allLiterature
    .filter((post) => post.frontmatter.title !== frontmatter.title)
    .slice(0, 2);
---

<BaseLayout title={frontmatter.title}>
    <LiteratureScrollObserver client:load />
    <div class="literature-container">
        <div class="visual-pane">
            <LiteratureViewer client:load />
        </div>
        <div class="text-pane">
            <div class="content-wrapper prose prose-invert max-w-none">
                <a href="/literature" class="back-link"
                    >&larr; Back to Literature</a
                >
                <h1>{frontmatter.title}</h1>
                <slot />

                <div class="read-next">
                    <div class="divider"></div>
                    <p class="end-mark">‚ùß</p>
                    <h3>Continue Reading</h3>
                    <div class="next-grid">
                        {
                            otherLiterature.map((post) => (
                                <a href={post.url} class="next-card">
                                    <span class="next-label">Next Story</span>
                                    <h4>{post.frontmatter.title}</h4>
                                    <p>{post.frontmatter.description}</p>
                                </a>
                            ))
                        }
                        <a href="/literature" class="next-card return-card">
                            <span class="next-label">Collection</span>
                            <h4>Return to Gallery</h4>
                            <p>View all available works</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>

<style>
    .literature-container {
        display: flex;
        min-height: 100vh;
        width: 100%;
    }

    .visual-pane {
        width: 50%;
        height: 100vh;
        position: sticky;
        top: 0;
        flex-shrink: 0;
    }

    .text-pane {
        width: 50%;
        min-height: 100vh;
        background-color: #0f0f0f; /* Dark background for text */
        z-index: 1;
    }

    .content-wrapper {
        padding: 4rem;
        /* Removed padding-bottom: 80vh; replaced with content */
        max-width: 65ch;
        margin: 0 auto;
    }

    .read-next {
        margin-top: 8rem;
        min-height: 60vh; /* Provides the necessary scroll space */
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .divider {
        height: 1px;
        background: linear-gradient(to right, transparent, #333, transparent);
        margin-bottom: 2rem;
    }

    .end-mark {
        text-align: center;
        font-size: 2rem;
        color: #444;
        margin-bottom: 4rem;
    }

    .next-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }

    .next-card {
        display: block;
        padding: 2rem;
        border: 1px solid #222;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
        background: #141414;
    }

    .next-card:hover {
        border-color: #444;
        background: #1a1a1a;
        transform: translateY(-2px);
    }

    .next-card h4 {
        margin: 0.5rem 0;
        color: #eee;
    }

    .next-card p {
        margin: 0;
        color: #888;
        font-size: 0.9rem;
    }

    .next-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: #555;
    }

    .return-card {
        border-style: dashed;
    }

    .back-link {
        display: inline-block;
        margin-bottom: 2rem;
        color: #888;
        text-decoration: none;
        transition: color 0.2s;
    }

    .back-link:hover {
        color: #fff;
    }

    /* Mobile adjustments */
    @media (max-width: 768px) {
        .literature-container {
            display: block;
        }

        .visual-pane {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            z-index: 0;
        }

        /* Dark overlay for readability on mobile */
        .visual-pane::after {
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient(
                to bottom,
                rgba(0, 0, 0, 0.2),
                rgba(0, 0, 0, 0.7)
            );
            pointer-events: none;
        }

        .text-pane {
            position: relative;
            width: 100%;
            background-color: transparent;
            z-index: 1;
        }

        .content-wrapper {
            padding: 2rem;
            padding-top: 45vh; /* Start text lower to show off the art */
        }

        /* Enhance text readability against the image background */
        .content-wrapper :global(h1),
        .content-wrapper :global(h2),
        .content-wrapper :global(h3),
        .content-wrapper :global(p),
        .content-wrapper :global(li) {
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.8);
        }

        .next-card {
            background: rgba(20, 20, 20, 0.8);
            backdrop-filter: blur(10px);
        }
    }
</style>
