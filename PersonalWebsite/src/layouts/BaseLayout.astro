---
const isHomepage = Astro.url.pathname === "/";

const siteDetails = {
    name: "Ayanami's Little Place",
    url: "https://ayanamikaine.com/", // Replace with your actual domain
};

// src/layouts/BaseLayout.astro

// We can define props that every page will need, like a title.
export interface Props {
    title: string;
}

const { title } = Astro.props;

// Import global styles here so they apply everywhere.
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="A description of your awesome site."
        />
        <meta name="viewport" content="width=device-width" />

        <link
            rel="icon"
            href="/favicon.svg"
            type="image/svg+xml"
        />

        <link
            rel="icon"
            href="/favicon-light.svg"
            type="image/svg+xml"
            media="(prefers-color-scheme: light)"
        />
        <link
            rel="icon"
            href="/favicon-dark.svg"
            type="image/svg+xml"
            media="(prefers-color-scheme: dark)"
        />

        {
            isHomepage && (
                <script
                    type="application/ld+json"
                    set:html={JSON.stringify({
                        "@context": "https://schema.org",
                        "@type": "WebSite",
                        name: siteDetails.name,
                        url: siteDetails.url,
                    })}
                />
            )
        }

        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>

<style is:global>
    /* These global styles are essential for full-screen apps.
      They ensure the body and the root element can fill the viewport height.
    */
    html,
    body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
    }
</style>
