---
// src/layouts/BaseLayout.astro

// We can define props that every page will need, like a title.
export interface Props {
    title: string;
}

const { title } = Astro.props;

// Import global styles here so they apply everywhere.
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="A description of your awesome site."
        />
        <meta name="viewport" content="width=device-width" />

        <link
            rel="icon"
            href="/favicon-light.svg"
            media="(prefers-color-scheme: light)"
        />
        <link
            rel="icon"
            href="/favicon-dark.svg"
            media="(prefers-color-scheme: dark)"
        />

        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>

<style is:global>
    /* These global styles are essential for full-screen apps.
      They ensure the body and the root element can fill the viewport height.
    */
    html,
    body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
    }
</style>
