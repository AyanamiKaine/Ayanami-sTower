    <ProjectReference Include="../../CsFSRS/FSRS/FSRS.csproj" />
    <ProjectReference Include="..\StellaLearning.Dtos\StellaLearning.Dtos.csproj" />
  </ItemGroup>

  <ItemGroup>
    <AvaloniaResource Include="Assets\**" />
